#version 330 core
layout (location = 0) in vec3 position;
layout (location = 1) in vec3 color;
layout (location = 2) in vec2 texCoord;

out vec3 ourColor;
out vec2 TexCoord;
out vec3 ppp;

uniform mat4 MVP;

void main()
{
    gl_Position = MVP * vec4(position.xyz, 1.0);
    ourColor = color;
    TexCoord = texCoord;
    ppp = position;
}