#version 330 core

in vec3 position;

out vec4 FragColor;

uniform vec4 customColor;

void main()
{

   if(position.x < -0.475f || position.x > 0.475f
        || position.y < -0.475f || position.y > 0.475f
        || (position.x > -0.025f && position.x < 0.025f && position.y > -0.025f && position.y < 0.025f)
        ) {

        FragColor = customColor;

   } else {
        FragColor = vec4(0.9f,0.9f,0.9f,1.0f);
   }
}