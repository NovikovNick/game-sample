#version 330 core

in vec3 position;

out vec4 FragColor;

uniform vec4 customColor;

void main()
{

   if(position.x < -0.475f
        || position.x > 0.475f
        || position.y < -0.475f
        || position.y > 0.475f) {
    FragColor = vec4(customColor.yyy, 1.0f);
   } else {
    FragColor = customColor;
   }
}